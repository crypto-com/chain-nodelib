{
  "name": "cro-nodelib",
  "version": "0.1.0",
  "description": "Crypto.com Chain library for Node.js",
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crypto-com/cro-nodelib"
  },
  "author": "Crypto.com <chain@crypto.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "0.19.2",
    "bignumber.js": "9.0.0",
    "bip32": "2.0.4",
    "bip39": "3.0.2",
    "lossless-json": "1.0.3",
    "ow": "0.15.0"
  },
  "devDependencies": {
    "@types/axios": "0.14.0",
    "@types/bignumber.js": "5.0.0",
    "@types/chai": "4.2.11",
    "@types/lossless-json": "1.0.0",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.8",
    "@types/sinon": "7.5.0",
    "@typescript-eslint/eslint-plugin": "2.8.0",
    "@typescript-eslint/parser": "2.8.0",
    "axios": "0.19.2",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-prettier": "3.1.1",
    "mocha": "7.1.1",
    "neon-cli": "0.3.3",
    "nodemon": "1.19.4",
    "prettier": "1.19.1",
    "sinon": "7.5.0",
    "ts-node": "8.8.0",
    "typescript": "3.8.3"
  },
  "scripts": {
    "neon-build": "neon build",
    "tsc-build": "tsc",
    "build": "npm run neon-build && npm run tsc-build",
    "clean": "rm -rf ./native/target && rm ./native/index.node",
    "lint": "npm run eslint && npm run rustlint",
    "eslint": "eslint 'lib/**'",
    "rustlint": "cd native && cargo fmt -- --check --color=auto && cargo clippy -- -D warnings",
    "audit": "npm audit && npm run rustaudit",
    "rustaudit": "cd native && cargo audit",
    "nodemon": "NODE_ENV=test nodemon",
    "test": "NODE_ENV=test mocha --require ./node_modules/ts-node/register --exit --color --recursive 'lib/src/**/*.spec.ts'",
    "ci:withdraw-all-stake": "ts-node ./integration-tests/withdraw-all-stake.ts",
    "integration-tests": "NODE_ENV=integration-test mocha --require ./node_modules/ts-node/register --exit --color --recursive 'integration-tests/**/*.spec.ts'"
  }
}
